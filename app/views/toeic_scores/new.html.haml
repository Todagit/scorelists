.new__toeicscore
  .new__toeicscore__title
    %h2 TOEIC L&R のスコアを登録できます
  .new__toeicscore__form
    =form_with model: @toeic_score ,class:"new__toeicscore__form__box",local: true do |f|
      .f__field
        = f.label :test_date, "テストを実施した日付"
        = f.date_select :test_date
      .f__field
        = f.label :administration_number, "受験したテストの開催回"
        = f.number_field :administration_number
      .f__field
        = f.label :listening_score, "リスニング"
        = f.number_field :listening_score
      .f__field
        = f.label :reading_score, "リーディング"
        = f.number_field :reading_score 
      .f__submit
        = f.submit "登録する"
    .new__studyscore__total
      .new__studyscore__total__title
        合計点
      .new__studyscore__total__score
        —
  .back
    = link_to root_path do
      トップページにもどる
    